<h2>
  Current Books out for <%= @checkouts.first.user.name %>
</h2>

<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Checked Out On</th>
      <th>Status</th>
      <th>Due Date</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @checkouts.each do |co| %>
      <tr>
        <th><%= co.book.title %></th>
        <th><%= co.book.author %>Author</th>
        <th><%= co.created_at.in_time_zone('Eastern Time (US & Canada)').strftime("%B %-d, %Y")%></th>
        <th><%= co.status%></th>
        <th><%= co.due_date.in_time_zone('Eastern Time (US & Canada)').strftime("%B %-d, %Y") %></th>
        <th><%= button_to "Check-in", checkout_path(co), method: :patch, class: "btn btn-primary btn-xs"%></th>
      </tr>
    <% end %>
  </tbody>
</table>
