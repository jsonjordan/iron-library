<body class="BookCampusIndex">

  <h2>
    Current Books for TIY-<%= @campus.city %>
    <span class="badge" id="book-count"></span>
  </h2>

  <table class="table table-hover table-striped table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Subject Area</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |b| %>
      </tr>
        <th><%= b.title %></th>
        <th><%= b.author %></th>
        <th><%= b.isbn %></th>
        <th><%= b.category %></th>
        <th><%= b.status %></th>
        <th class="button-container">
          <%= button_to('Go To Book', book_path(b), class: 'btn btn-xs btn-info', method: :get) %>
        </th>
      </tr>
      <% end %>
    </tbody>
  </table>


  <h3>
    Don't see the book you want?
  </h3>
  <%= button_to('Request new book', new_campu_purchase_request_path(@campus), class: 'btn btn-m btn-warning', method: :get) %>

</body>
