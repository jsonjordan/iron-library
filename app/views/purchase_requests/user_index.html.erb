<h2>
  Purchase Requests for <%= current_user.name %>
  <span class="badge"><%= @prs.count %></span>
</h2>

<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Book Title</th>
      <th>Book Author</th>
      <th>Book ISBN</th>
      <th>Subject Area</th>
      <th>Made By</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @prs.each do |p| %>
    </tr>
      <th><%= p.title %></th>
      <th><%= p.author %></th>
      <th><%= p.isbn %></th>
      <th><%= p.klass %></th>
      <th><%= p.user.email %></th>
      <th><%= p.status %></th>
    </tr>
    <% end %>
  </tbody>
</table>
