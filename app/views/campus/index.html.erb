<h2>
  Current Campuses
  <span class="badge"><%= @campuses.count %></span>
</h2>

<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Location</th>
      <th>Librarian</th>
      <th>Books</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @campuses.each do |c| %>
      <tr>
        <th><%= c.city %></th>
        <th><%= c.librarian %></th>
        <th><%= c.books.count %></th>
        <th class="button-container">
          <%= button_to('Go To Library', "/campus/#{c.id}/books", class: 'btn btn-xs btn-primary', method: :get) %>
          <%= button_to('Go To Campus Info', campu_path(c), class: 'btn btn-xs btn-info', method: :get) %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>
