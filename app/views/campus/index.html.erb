<h2>
  Current Campuses
  <span class="badge"><%= @campuses.count %></span>
</h2>

<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Location</th>
      <th>Librarian</th>
      <th>Books</th>
      <th>Go To Our Library</th>
    </tr>
  </thead>
  <tbody>
    <% @campuses.each do |c| %>
      <th><%= c.city %></th>
      <th><%= c.librarian %></th>
      <th><%= c.books.count %></th>
      <th><%= button_to('Library', "/campus/#{c.id}/books", class: 'btn btn-xs btn-primary', method: :get) %></th>
    <% end %>
  </tbody>
</table>
